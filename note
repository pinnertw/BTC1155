  struct Lightning {
      uint256 tokenId;
      string background;
      string rain;
      string building;
      string tree;
      string human;
      string cloud;
      string lightning;
      string groundStyle;
      uint256 rainDensity;
      bool inverse;
  }
  // map: 0 = background, 1 = rain, 2 = building, 3 = tree, 4 = human, 5 = cloud, 6 = lightning
